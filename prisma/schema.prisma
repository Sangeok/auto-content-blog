datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Posts {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  subtitle  String
  content   String
  likes     Int      @default(0)
  imgUrl    String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Admin {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}